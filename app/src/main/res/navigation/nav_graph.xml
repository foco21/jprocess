<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/permissions_fragment">

    <fragment
        android:id="@+id/permissions_fragment"
        android:name="com.reilandeubank.unprocess.fragments.PermissionsFragment"
        android:label="PermissionsFragment"
        tools:layout="@layout/fragment_permissions">
        <action
            android:id="@+id/action_permissions_to_camera"
            app:destination="@id/camera_fragment"
            app:popUpTo="@id/permissions_fragment"
            app.popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/camera_fragment"
        android:name="com.reilandeubank.unprocess.fragments.CameraFragment"
        android:label="CameraFragment"
        tools:layout="@layout/fragment_camera">
        <action
            android:id="@+id/action_camera_to_settings"
            app:destination="@id/settings_fragment" />
        <action
            android:id="@+id/action_camera_to_image_viewer"
            app:destination="@id/image_viewer_fragment" />
        <action
            android:id="@+id/action_camera_to_permissions"
            app:destination="@id/permissions_fragment" />
    </fragment>

    <fragment
        android:id="@+id/settings_fragment"
        android:name="com.reilandeubank.unprocess.fragments.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settings_to_camera"
            app:destination="@id/camera_fragment" />
    </fragment>

    <fragment
        android:id="@+id/image_viewer_fragment"
        android:name="com.example.android.camera2.basic.fragments.ImageViewerFragment"
        android.label="ImageViewerFragment"
        tools:layout="@layout/fragment_image_viewer">
        <argument
            android:name="file_path"
            app:argType="string" />
        <argument
            android:name="orientation"
            app:argType="integer" />
        <argument
            android:name="depth"
            app:argType="boolean" />
    </fragment>

</navigation>